<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_analytics"
        tools:context=".viewcontrollers.activities.AnalyticsActivity">

    <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/carTypesPieChart"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="500dp"/>

    <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/carTypesBarChart"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/carTypesPieChart"
            android:layout_height="500dp"/>
</android.support.constraint.ConstraintLayout>