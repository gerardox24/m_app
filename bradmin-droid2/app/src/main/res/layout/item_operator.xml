<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_operator"
        android:layout_height="72dp"
        android:layout_width="match_parent">

    <com.androidnetworking.widget.ANImageView
            android:id="@+id/operatorImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/newimage"/>

    <TextView
            android:id="@+id/fullNameOperatorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mock_text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginTop="17dp"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/operatorImageView"/>


</android.support.constraint.ConstraintLayout>