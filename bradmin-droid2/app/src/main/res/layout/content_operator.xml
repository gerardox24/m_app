<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_operator"
        tools:context=".viewcontrollers.activities.OperatorActivity">

    <com.androidnetworking.widget.ANImageView
            android:id="@+id/pictureImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_launcher" />
    <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:textStyle="bold"
            android:text="Name:"
            app:layout_constraintTop_toBottomOf="@id/pictureImageView"/>
    <TextView
            android:id="@+id/lastnameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/nameLabel"
            android:textStyle="bold"
            android:text="Last name:" />
    <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/lastnameLabel"
            android:textStyle="bold"
            android:text="User:" />
    <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/nameLabel"
            app:layout_constraintTop_toBottomOf="@id/pictureImageView"
            android:textStyle="bold"
            android:text="@string/mock_text"/>
    <TextView
            android:id="@+id/lastnameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/lastnameLabel"
            app:layout_constraintTop_toBottomOf="@id/nameText"
            android:textStyle="bold"
            android:text="@string/mock_text"/>
    <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/usernameLabel"
            app:layout_constraintTop_toBottomOf="@id/lastnameText"
            android:textStyle="bold"
            android:text="@string/mock_text"/>

</android.support.constraint.ConstraintLayout>